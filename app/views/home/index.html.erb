<h1>トップページ</h1>

<% if user_signed_in? %>
<div class="container-fluid bg-info">
  <div class="row">
    <label>
      <%= @error_message %>
    </label>
    <h2>CO2濃度取得</h2>
    <%= form_tag("/home/index", method: :post) do %>
    <%= submit_tag("取得") %>
    <% end %>
      <br>
    <label>
      現在のCO2濃度は<%= @co2 %>です。
    </label>
  </div>
    <br>

  <div class="row">
    <h2>天気予報アプリの起動スイッチ</h2>
    <%= form_tag("/home/forecast_switch", method: :post) do %>
    <%= hidden_field_tag :forecast_switch, "on" %>
    <%= submit_tag("天気予報on") %>
    <% end %>

    <%= form_tag("/home/forecast_switch", method: :post) do %>
    <%= hidden_field_tag :forecast_switch, "off" %>
    <%= submit_tag("天気予報off") %>
    <% end %>
  </div>
  <br>

  <div class="row">

    <h2>エアコンのリモコンスイッチ</h2>
    <%= form_tag("/home/air_controll", method: :post) do %>
    <%= hidden_field_tag :air_condition_switch, "cool_on" %>
    <%= submit_tag("冷房") %>
    <% end %>

    <%= form_tag("/home/air_controll", method: :post) do %>
    <%= hidden_field_tag :air_condition_switch, "hot_on" %>
    <%= submit_tag("暖房") %>
    <% end %>

    <%= form_tag("/home/air_controll", method: :post) do %>
    <%= hidden_field_tag :air_condition_switch, "dry_on" %>
    <%= submit_tag("除湿") %>
    <% end %>

    <%= form_tag("/home/air_controll", method: :post) do %>
    <%= hidden_field_tag :air_condition_switch, "air_off" %>
    <%= submit_tag("エアコン停止") %>
    <% end %>

  </div>
  <div class="row">
    <% $message_log.each do |message| %>
    <label><%= message %></label>
    <br>
    <% end %>
  </div>
</div>

<% else %>
こんにちは
<% end %>
